root = true

[*]

# 根级别的配置
root = true

# 通用设置
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 针对特定文件类型的设置
[*.js, *.ts, *.jsx, *.tsx]
indent_style = space          # 使用空格缩进
indent_size = 2               # 缩进大小

[*.py]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false # Markdown 文件保留尾部空格
